#     scheduler: active_failover=1 retry_down=2 writer_is_also_reader=0 failBack=false
#
# Scenario:
# 1. node_1: SET global wsrep_desync=1
#     => node_1 state does not change to SOFT_OFFLINE as it is the only writer
# 2. node_1: SET global wsrep_desync=0
#     => node_1 state changes to ONLINE.

--let $proxysql_scheduler_config = config.toml
--let $scheduler_extra_args = --pxccluster.writerisalsoreader=0
--let $action_1_node = node_1
--let $action_1 = SET global wsrep_desync=1;
--let $action_2_node = node_1
--let $action_2 = SET global wsrep_desync=0;
--source 1w2r2bw_2actions.inc
